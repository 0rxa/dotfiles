#############################################################################################################

# Media #####################################################################################################
bindsym $sup+bracketleft exec --no-startup-id $HOME/.scripts/changevol.sh -
bindsym $sup+bracketright exec --no-startup-id $HOME/.scripts/changevol.sh +
bindsym $sup+m exec --no-startup-id $HOME/.scripts/changevol.sh tm
bindsym $sup+Shift+bracketright exec --no-startup-id cb -m s -o ++ && notify-send -t 500 "Brightness" "$(cb -m s -o -)"
bindsym $sup+Shift+bracketleft exec --no-startup-id cb -m s -o -- && notify-send -t 500 "Brightness" "$(cb -m s -o -)"

bindsym 	$sup+p		exec mocp -G
bindsym 	$sup+n		exec mocp -f
bindsym 	$sup+l		exec mocp -r
bindsym 	$sup+Right	exec mocp -k +1
bindsym 	$sup+Left	exec mocp -k -1
bindsym 	$sup+x		exec mocp -x
#############################################################################################################

# Shortcuts #####################################################################################
bindsym $mod+Return exec termite
bindsym $mod+Shift+Return exec termite --title="FLOATING"
bindsym $mod+$sup+l exec lock.sh
bindsym $sup+f exec firefox
bindsym $sup+w exec whatsie
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+Shift+Escape exec $HOME/.scripts/shutdown.sh
bindsym $sup+Return exec --no-startup-id brave
bindsym $sup+s exec --no-startup-id $HOME/.scripts/shootscr.sh
bindsym $sup+c exec --no-startup-id speedcrunch
bindsym $sup+d exec $HOME/.scripts/redshift.sh
bindsym $mod+Shift+d exec $HOME/.scripts/setDisplay.sh
bindsym $sup+Shift+l exec lock.sh
bindsym $mod+u exec $HOME/.scripts/dUmount.sh
bindsym $mod+m exec $HOME/.scripts/dMount.sh
bindsym $mod+g exec $HOME/.scripts/gsearch.sh
